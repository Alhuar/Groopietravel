<section class="hero is-medium is-dark is-bold">
  <div class="hero-body">
    <div class="container">
      <div class="columns">
        <div class="column is-half is-offset-one-quarter">
            <h2 class="title is-text-centered">Log in</h2>

                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <div class="field">
                    <%= f.label :email, class:"title is-5" %><br />
                    <%= f.email_field :email, autofocus: true, class:"input is-margin-bottom" %>
                  </div>

                  <div class="field">
                    <%= f.label :password %><br />
                    <%= f.password_field :password, autocomplete: "off", class:"input is-margin-bottom" %>
                  </div>

                  <% if devise_mapping.rememberable? -%>
                    <div class="field">
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me %>
                    </div>
                  <% end -%>

                  <div class="actions">
                    <%= f.submit "Log in", class: "button is-light is-fullwidth" %>
                  </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="column is-half is-offset-one-quarter">
  <%= render "devise/shared/links" %>
</div>
</section>
